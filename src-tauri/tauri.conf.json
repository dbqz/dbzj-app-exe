{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "定边职教",
  "version": "1.0.0",
  "identifier": "com.dbzj.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "定边职教",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/icon.png"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.png",
        "installMode": "both",
        "languages": ["SimpChinese"],
        "displayLanguageSelector": false,
        "template": "installer.nsi"
      }
    }
  }
}
